	@extend .btn;
	background-color: $color-blue;
	color: $color-white !important;
	&:hover {
		background-color: lighten($color-blue, 3);
		color: $color-white !important;
	}
}

.btn-transparent {
	@extend .btn;
	background-color: transparent;
	color: $color-white !important;
	border: 1px solid $color-white;
}
